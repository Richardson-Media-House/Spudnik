{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"lib": [
			"esnext",
			"dom"
		],
		"sourceMap": true,
		"allowJs": true,
		"checkJs": true,
		"outDir": "dist",
		"removeComments": true,
		"strict": false,
		"noUnusedLocals": true,
		"moduleResolution": "node",
		"baseUrl": "./src",
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"paths": {
            "@utils/*": ["./lib/util/*"],
			"@lib/*": ["./lib/*"],
			"@root/*": ["./*"]
        }
	}
}