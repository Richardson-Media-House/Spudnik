{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"lib": [
			"esnext",
			"dom"
		],
		"sourceMap": true,
		"allowJs": true,
		"checkJs": true,
		"outDir": "./dist",
		"removeComments": true,
		"strict": false,
		"noUnusedLocals": true,
		"moduleResolution": "node",
		"baseUrl": ".",
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		"paths": {
            "@utils/*": ["./src/lib/util/*"],
			"@lib/*": ["./src/lib/*"],
			"@root/*": ["./src/*"]
        }
	},
	"include": [
		"./launch.ts",
		"./src/**/*.json",
		"./src/**/*.ts"
	]
}