{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"lib": [
			"esnext"
		],
		"allowJs": true,
		"checkJs": true,
		"outDir": "./dist",
		"removeComments": true,
		"strict": false,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"baseUrl": ".",
		"experimentalDecorators": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
	},
	"exclude": [
		"node_modules",
		"dist",
		"docs",
		"config",
		"scripts"
	]
}